<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="airost.teamrocket.posturedetect">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <application
        android:allowBackup="true"
        android:logo="@drawable/team_rocket_logo"
        android:icon="@drawable/team_rocket_logo"
        android:label="@string/tfe_pe_app_name"
        android:roundIcon="@drawable/team_rocket_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.PoseEstimation">
        <activity android:name="airost.teamrocket.posturedetect.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>